<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width"
    tools:background="@color/category_numbers"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/width"
        android:layout_alignParentBottom="true"
        android:background="@color/tan"
        tools:src="@drawable/family_daughter"/>
    <TextView
        android:id="@+id/miwok_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/half_width"
        android:layout_alignParentLeft="false"
        android:layout_toRightOf="@id/image"
        android:paddingLeft="@dimen/padding"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="bottom"
        android:textStyle="bold"
        tools:text="Hello"/>
    <TextView
        android:id="@+id/english_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/half_width"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/miwok_text"
        android:paddingLeft="@dimen/padding"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="top"
        tools:textAppearance="?android:textAppearanceLarge"
        tools:text="Mento wuksus"/>
    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding"
        android:src="@drawable/ic_play_arrow"/>
</RelativeLayout>